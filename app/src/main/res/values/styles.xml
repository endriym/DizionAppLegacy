<resources>
    <!-- Base application theme. -->
    <style name="VioletAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/violetPrimary</item>
        <item name="colorPrimaryDark">@color/violetPrimaryDark</item>
        <item name="colorAccent">@color/violetAccent</item>
    </style>

    <style name="WrapContentDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
    </style>

    <style name="GreenAppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/greenPrimary</item>
        <item name="colorPrimaryDark">@color/greenPrimaryDark</item>
        <item name="colorAccent">@color/greenAccent</item>
    </style>

</resources>